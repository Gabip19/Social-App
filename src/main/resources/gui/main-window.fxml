<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane fx:id="rootAnchor" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainPaneController">
   <stylesheets>
      <URL value="@styles/main-windowCSS.css" />
   </stylesheets>
   <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

      <HBox fx:id="topHBox" alignment="CENTER_RIGHT" prefHeight="19.0" prefWidth="1146.0" styleClass="top-hbox" VBox.vgrow="NEVER">
         <Button alignment="CENTER" contentDisplay="CENTER" focusTraversable="false" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#minimizeWindow" prefHeight="30.0" prefWidth="50.0" styleClass="top-bar-btn" textAlignment="CENTER" HBox.hgrow="NEVER">
            <graphic>
               <FontIcon iconLiteral="mdrmz-minimize" iconSize="20" textAlignment="CENTER" />
            </graphic>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Button>
         <Button alignment="CENTER" contentDisplay="CENTER" focusTraversable="false" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#maximizeWindow" prefHeight="30.0" prefWidth="50.0" styleClass="top-bar-btn" textAlignment="CENTER" HBox.hgrow="NEVER">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
            <graphic>
               <FontIcon iconLiteral="mdal-crop_square" iconSize="20" textAlignment="CENTER" />
            </graphic>
         </Button>
         <Button alignment="CENTER" contentDisplay="CENTER" focusTraversable="false" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#closeWindow" prefHeight="30.0" prefWidth="50.0" styleClass="close-app-btn" textAlignment="CENTER" HBox.hgrow="NEVER">
            <graphic>
               <FontIcon iconLiteral="mdral-close" iconSize="20" textAlignment="CENTER" />
            </graphic>
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Button>
      </HBox>

      <BorderPane fx:id="borderPane" prefHeight="810.0" prefWidth="1146.0" VBox.vgrow="ALWAYS">

         <left>
            <VBox fx:id="friendsVbox" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="450.0" styleClass="friends-vbox" BorderPane.alignment="CENTER">
               <Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" mouseTransparent="true" styleClass="panel-title" text="FRIENDS" textAlignment="CENTER" textFill="WHITE" VBox.vgrow="NEVER">
                  <font>
                     <Font size="20.0" />
                  </font>
                  <VBox.margin>
                     <Insets bottom="15.0" left="10.0" right="10.0" />
                  </VBox.margin></Label>
               <ListView fx:id="friendsListView" focusTraversable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="746.0" prefWidth="356.0" styleClass="friends-view" VBox.vgrow="ALWAYS" />
               <BorderPane.margin>
                  <Insets bottom="30.0" top="30.0" />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="25.0" />
               </padding>
            </VBox>
         </left>

         <center>
            <AnchorPane fx:id="midWindow" prefHeight="785.0" prefWidth="1039.0" styleClass="mid-window" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="20.0" right="20.0" />
               </BorderPane.margin></AnchorPane>
         </center>

         <top>
            <HBox alignment="CENTER" minWidth="-Infinity" prefHeight="10.0" prefWidth="1146.0" styleClass="action-top-bar" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="12.0" left="20.0" right="20.0" top="12.0" />
               </padding>
               <Button fx:id="friendsButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#toggleFriendsPanel" prefHeight="40.0" prefWidth="40.0" styleClass="btn-friends" HBox.hgrow="NEVER">
                  <HBox.margin>
                     <Insets right="15.0" />
                  </HBox.margin>
                  <graphic>
                     <FontIcon iconLiteral="mdmz-people_alt" iconSize="25" />
                  </graphic></Button>
               <Button fx:id="homeButton" contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" styleClass="btn-home" textAlignment="CENTER" HBox.hgrow="NEVER">
                  <graphic>
                     <FontIcon iconLiteral="mdral-home" iconSize="25" />
                  </graphic></Button>
               <Region minWidth="-Infinity" prefHeight="55.0" prefWidth="55.0" HBox.hgrow="ALWAYS" />
               <TextField fx:id="searchBar" alignment="CENTER" minWidth="-Infinity" onKeyTyped="#searchForUsersAction" prefHeight="25.0" prefWidth="305.0" promptText="Connect with people" styleClass="search-bar" HBox.hgrow="ALWAYS" />
               <Region minWidth="-Infinity" prefHeight="40.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
               <Button fx:id="requestsButton" contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#toggleRequestsPanel" prefHeight="40.0" prefWidth="40.0" styleClass="btn-rqst" HBox.hgrow="NEVER">
                  <HBox.margin>
                     <Insets right="15.0" />
                  </HBox.margin>
                  <graphic>
                     <FontIcon iconLiteral="mdal-group_add" iconSize="25" />
                  </graphic></Button>
               <Button fx:id="messagesButton" contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" styleClass="btn-msg" HBox.hgrow="NEVER">
                  <HBox.margin>
                     <Insets right="15.0" />
                  </HBox.margin>
                  <graphic>
                     <FontIcon disable="true" iconLiteral="mdmz-mark_chat_unread" iconSize="25" />
                  </graphic></Button>
               <Label fx:id="userNameLabel" alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" prefHeight="28.0" prefWidth="134.0" styleClass="user-name-label" text="USER_NAME" wrapText="true" HBox.hgrow="NEVER">
                  <HBox.margin>
                     <Insets right="15.0" />
                  </HBox.margin></Label>
               <Button fx:id="logOutButton" contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#logOut" prefHeight="40.0" prefWidth="40.0" styleClass="btn-log-out" HBox.hgrow="NEVER">
                  <graphic>
                     <FontIcon iconLiteral="mdral-exit_to_app" iconSize="25" />
                  </graphic></Button>
            </HBox>
         </top>
         <right>
            <VBox fx:id="requestsVbox" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="450.0" styleClass="requests-vbox" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="30.0" top="30.0" />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="30.0" left="10.0" top="25.0" />
               </padding>
               <Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" mouseTransparent="true" styleClass="panel-title" text="FRIEND REQUESTS" textAlignment="CENTER" textFill="WHITE" VBox.vgrow="NEVER">
                  <font>
                     <Font size="20.0" />
                  </font>
                  <VBox.margin>
                     <Insets bottom="15.0" left="10.0" right="10.0" />
                  </VBox.margin>
               </Label>
               <ListView fx:id="requestsListView" focusTraversable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="746.0" prefWidth="368.0" styleClass="request-view" VBox.vgrow="ALWAYS" />
            </VBox>
         </right>

      </BorderPane>
   </VBox>
</AnchorPane>
