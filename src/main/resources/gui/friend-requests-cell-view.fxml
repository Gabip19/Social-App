<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane fx:id="anchorRoot" maxWidth="1.7976931348623157E308" prefHeight="50.0" prefWidth="500.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <HBox alignment="CENTER_LEFT" layoutX="89.0" layoutY="-4.0" maxWidth="1.7976931348623157E308" prefHeight="62.0"
          prefWidth="500.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
        </padding>
        <Label fx:id="userNameLabel" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
               minWidth="-Infinity" text="USER NAME HERE" wrapText="true">
           <font>
               <Font size="18.0"/>
           </font>
        </Label>
        <Region maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="0.0" prefHeight="50.0"
                prefWidth="12.0" HBox.hgrow="ALWAYS"/>
        <VBox alignment="CENTER" minWidth="-Infinity">
            <HBox.margin>
                <Insets left="10.0" right="10.0"/>
            </HBox.margin>
            <Label fx:id="statusLabel" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
                   maxWidth="1.7976931348623157E308" text="PENDING" wrapText="true" VBox.vgrow="NEVER">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            <Label fx:id="dateLabel" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
                   maxWidth="1.7976931348623157E308" text="Since 12/12/2022" wrapText="true" VBox.vgrow="NEVER">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
        </VBox>
        <Region maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="0.0" prefHeight="50.0"
                prefWidth="12.0" HBox.hgrow="ALWAYS"/>
        <Button fx:id="acceptButton" minWidth="-Infinity" mnemonicParsing="false" text="Accept" HBox.hgrow="NEVER">
           <graphic>
               <FontIcon iconLiteral="mdal-check_circle" iconSize="25"/>
           </graphic>
           <font>
               <Font size="15.0"/>
           </font>
        </Button>
        <Button fx:id="rejectButton" minWidth="-Infinity" mnemonicParsing="false" text="Reject" HBox.hgrow="NEVER">
           <graphic>
               <FontIcon iconLiteral="mdal-cancel" iconSize="25"/>
           </graphic>
           <font>
               <Font size="15.0"/>
           </font>
           <HBox.margin>
               <Insets left="10.0"/>
           </HBox.margin>
        </Button>
    </HBox>
</AnchorPane>
