    <Group layoutX="1034.0" layoutY="-2.0">
        <HBox layoutY="2.0" prefHeight="27.0" prefWidth="112.0">
            <Button focusTraversable="false" mnemonicParsing="false" onAction="#minimizeWindow" prefHeight="30.0" prefWidth="69.0" styleClass="min-btn">
                <graphic>
<!--                    <FontIcon iconLiteral="mdmz-minimize" iconSize="20" styleClass="topbar-btn" />-->
                </graphic>
            </Button>
            <Button focusTraversable="false" mnemonicParsing="false" onAction="#closeWindow" prefHeight="30.0" prefWidth="69.0" styleClass="close-btn">
                <graphic>
<!--                    <FontIcon iconLiteral="mdal-close" iconSize="20" styleClass="topbar-btn" />-->
                </graphic>
            </Button>
        </HBox>
    </Group>
    <Group id="sign-in-group" layoutX="382.0" layoutY="75.0">
      <children>
           <VBox fx:id="signInVBox" alignment="CENTER" prefHeight="661.0" prefWidth="382.0" styleClass="sign-in-vbox">
               <padding>
                   <Insets bottom="60.0" left="60.0" right="60.0" />
               </padding>
               <Label prefHeight="67.0" prefWidth="248.0" styleClass="welcome-title" text="Welcome">
                   <VBox.margin>
                       <Insets top="50.0" />
                   </VBox.margin>
               </Label>
               <Label styleClass="input-title" text="SIGN IN">
                   <VBox.margin>
                       <Insets top="-15.0" />
                   </VBox.margin>
               </Label>
               <GridPane prefHeight="84.0" prefWidth="262.0">
                   <columnConstraints>
                       <ColumnConstraints hgrow="SOMETIMES" maxWidth="40.0" minWidth="40.0" prefWidth="40.0" />
                       <ColumnConstraints hgrow="SOMETIMES" maxWidth="262.0" minWidth="10.0" prefWidth="226.0" />
                   </columnConstraints>
