<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>


<AnchorPane fx:id="anchorRoot" maxWidth="1.7976931348623157E308" prefHeight="50.0" prefWidth="500.0"
            xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
   <stylesheets>
      <URL value="@styles/friend-cellCSS.css"/>
   </stylesheets>
   <HBox alignment="CENTER_LEFT" layoutX="78.0" maxWidth="1.7976931348623157E308" prefHeight="60.0" prefWidth="422.0"
         styleClass="friend-hbox" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
         AnchorPane.topAnchor="0.0">
      <padding>
         <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
      </padding>
      <Label fx:id="nameLabel" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="-Infinity"
             styleClass="name-label" text="USER NAME HERE" wrapText="true">
         <font>
            <Font size="15.0"/>
         </font>
      </Label>
      <Region maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="0.0" prefHeight="60.0"
              prefWidth="30.0" HBox.hgrow="ALWAYS"/>
      <Button fx:id="openChatButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
              minWidth="-Infinity" mnemonicParsing="false" styleClass="msg-btn" HBox.hgrow="NEVER">
         <graphic>
            <FontIcon iconLiteral="mdomz-message" iconSize="20" textAlignment="CENTER"/>
         </graphic>
      </Button>
      <Button fx:id="removeFriendButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
              minWidth="-Infinity" mnemonicParsing="false" styleClass="remove-btn" HBox.hgrow="NEVER">
         <graphic>
            <FontIcon iconLiteral="mdal-block" iconSize="20" textAlignment="CENTER"/>
         </graphic>
      </Button>
   </HBox>
</AnchorPane>
